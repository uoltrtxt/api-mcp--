<?xml version="1.0" encoding="UTF-8"?>
<!--
  CEP manifest for an advanced Adobe panel that integrates
  both ChatGPT API calls and MCP server connectivity.  This
  extension targets Premiere Pro and After Effects simultaneously.
  It defines a single panel entry point that loads the HTML UI.

  Change the ExtensionBundleId and Extension Id values to suit your
  organisation. They must remain unique within your system and may
  contain only letters, numbers and dots (no spaces).
-->
<ExtensionManifest Version="5.0"
    ExtensionBundleId="com.example.mcpgptpanel"
    ExtensionBundleName="어도비 cpe 및 api"
    ExtensionBundleVersion="1.0.0">
  <ExtensionList>
    <Extension Id="com.example.mcpgptpanel.panel" Version="1.0.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <!-- After Effects (AEFT) versions 17 and later -->
      <Host Name="AEFT" Version="[17.0,99.0]" />
      <!-- Premiere Pro (PPRO) versions 15 and later -->
      <Host Name="PPRO" Version="[15.0,99.0]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <!-- CSXS runtime version 6.0 is compatible with CEP panels used by CC 2020+. -->
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="6.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.example.mcpgptpanel.panel">
      <DispatchInfo>
        <Resources>
          <!-- Path to the HTML file used for the panel UI.  Relative
               paths are resolved from the extension root. -->
          <MainPath>html/index.html</MainPath>
          <!-- Path to the ExtendScript file containing functions that run
               inside After Effects or Premiere Pro. -->
          <ScriptPath>jsx/hostscript.jsx</ScriptPath>
        </Resources>
        <Lifecycle>
          <!-- The panel will open automatically when the host application starts. -->
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <!-- Name shown in the Window > Extensions menu. -->
          <Menu>어도비 cpe 및 api</Menu>
          <Geometry>
            <Size>
              <Width>500</Width>
              <Height>350</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>