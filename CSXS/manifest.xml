<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
  ExtensionBundleId="com.example.mcpgptpanel"
  ExtensionBundleName="어도비 cpe 및 api"
  ExtensionBundleVersion="1.0.0">
  <ExtensionList>
    <Extension Id="com.example.mcpgptpanel.panel" Version="1.0.0" />
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[25.0,99.0]" />
      <Host Name="AEFT" Version="[25.0,99.0]" />
      <Host Name="PHXS" Version="[27.0,99.0]" />
      <Host Name="IDSN" Version="[21.0,99.0]" />
      <Host Name="ACRO" Version="[25.0,99.0]" />
      <Host Name="AME"  Version="[25.0,99.0]" />
      <Host Name="AUDT" Version="[25.0,99.0]" />
    </HostList>

    <LocaleList>
      <Locale Code="All" />
    </LocaleList>

    <RequiredRuntimeList>
      <!-- CEP 12 (Premiere Pro 2025 / After Effects 2025) -->
      <RequiredRuntime Name="CSXS" Version="[12.0,99.0]" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.example.mcpgptpanel.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./html/index.html</MainPath>
          <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
        
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>

        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>

        <UI>
          <Type>Panel</Type>
          <Menu>어도비 cpe 및 api</Menu>
          <Geometry>
            <Size>
              <Width>500</Width>
              <Height>700</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
